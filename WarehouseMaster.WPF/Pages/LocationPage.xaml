<Page x:Class="WarehouseMaster.WPF.Pages.LocationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseMaster.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Локации" Loaded="Page_Loaded">

    <Grid Background="#CCDEAA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Добавление локации" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Название:"/>
                    <TextBlock Text="Код:"/>
                    <TextBlock Text="Ширина:"/>
                    <TextBlock Text="Длина:"/>
                    <TextBlock Text="Высота:"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="AddNameTextBox"/>
                    <TextBox x:Name="AddCodeTextBox"/>
                    <TextBox x:Name="AddWidthTextBox" Text="0"/>
                    <TextBox x:Name="AddLengthTextBox" Text="0"/>
                    <TextBox x:Name="AddHeightTextBox" Text="0"/>

                    <Button Content="Создать" Click="CreateLocation_Click"/>

                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Редактирование локации" 
                  Grid.Row="1" Grid.Column="0" 
                  Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Id"/>
                    <TextBlock Text="Название:"/>
                    <TextBlock Text="Код:"/>
                    <TextBlock Text="Ширина:"/>
                    <TextBlock Text="Длина:"/>
                    <TextBlock Text="Высота:"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="WorkerIdTextBox" IsReadOnly="True" Background="LightGray"/>
                    <TextBox x:Name="WorkerNameTextBox"/>
                    <TextBox x:Name="WorkerCodeTextBox"/>
                    <TextBox x:Name="WorkerWidthTextBox"/>
                    <TextBox x:Name="WorkerLengthTextBox"/>
                    <TextBox x:Name="WorkerHeightTextBox"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Обновить" Click="UpdateLocation_Click"/>
                        <Button Content="Удалить" Click="DeleteLocation_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Список локаций" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <StackPanel>
                <ScrollViewer>
                    <DataGrid x:Name="DataGridUI" SelectionChanged="DataGridUI_SelectionChanged" 
                              AutoGenerateColumns="True" Height="350"/>
                </ScrollViewer>
                <Button Content="Обновить список" Click="GetAllLocation_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
