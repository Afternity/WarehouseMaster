<Page x:Class="WarehouseMaster.WPF.Pages.PalletPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseMaster.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Палеты" Loaded="Page_Loaded">

    <Grid Background="#CCDEAA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Добавление паллеты" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Название:"/>
                    <TextBlock Text="Штрих-код:"/>
                    <TextBlock Text="Вес:"/>
                    <TextBlock Text="Длина:"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="AddNameTextBox"/>
                    <TextBox x:Name="AddBarcodeTextBox"/>
                    <TextBox x:Name="AddWeightTextBox" Text="0"/>
                    <TextBox x:Name="AddLengthTextBox" Text="0"/>

                    <Button Content="Создать" Click="CreatePallet_Click"/>

                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Редактирование паллеты" 
                  Grid.Row="1" Grid.Column="0" 
                  Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Id"/>
                    <TextBlock Text="Название:"/>
                    <TextBlock Text="Штрих-код:"/>
                    <TextBlock Text="Вес:"/>
                    <TextBlock Text="Длина:"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="WorkerIdTextBox" IsReadOnly="True" Background="LightGray"/>
                    <TextBox x:Name="WorkerNameTextBox"/>
                    <TextBox x:Name="WorkerBarcodeTextBox"/>
                    <TextBox x:Name="WorkerWeightTextBox"/>
                    <TextBox x:Name="WorkerLengthTextBox"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Обновить" Click="UpdatePallet_Click" />
                        <Button Content="Удалить" Click="DeletePallet_Click" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Список и кнопка -->
        <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Список паллет" Margin="5">
            <StackPanel>
                <ScrollViewer>

                    <DataGrid x:Name="DataGridUI" SelectionChanged="DataGridUI_SelectionChanged" AutoGenerateColumns="True"
                          Height="370"/>

                </ScrollViewer>
                <Button Content="Обновить список" Click="GetAllPallet_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
