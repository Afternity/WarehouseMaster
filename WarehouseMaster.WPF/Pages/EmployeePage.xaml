<Page x:Class="WarehouseMaster.WPF.Pages.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseMaster.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Сотрудники" Loaded="Page_Loaded">

    <Grid Background="#CCDEAA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Добавление сотрудника" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="ФИО:"/>
                    <TextBlock Text="Email:"/>
                    <TextBlock Text="Пароль:"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="AddFullNameTextBox"/>
                    <TextBox x:Name="AddEmailTextBox"/>
                    <TextBox x:Name="AddPasswordTextBox"/>

                    <Button Content="Создать" Click="CreateEmployee_Click"/>

                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Редактирование сотрудника" 
                  Grid.Row="1" Grid.Column="0" 
                  Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Id"/>
                    <TextBlock Text="ФИО:"/>
                    <TextBlock Text="Email:"/>
                    <TextBlock Text="Пароль:"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="WorkerIdTextBox" IsReadOnly="True" Background="LightGray"/>
                    <TextBox x:Name="WorkerFullNameTextBox"/>
                    <TextBox x:Name="WorkerEmailTextBox"/>
                    <TextBox x:Name="WorkerPasswordTextBox"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Обновить" Click="UpdateEmployee_Click"/>
                        <Button Content="Удалить" Click="DeleteEmployee_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Список сотрудников" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <StackPanel>
                <ScrollViewer>
                    <DataGrid x:Name="DataGridUI" SelectionChanged="DataGridUI_SelectionChanged" 
                              AutoGenerateColumns="True" Height="370"/>
                </ScrollViewer>
                <Button Content="Обновить список" Click="GetAllEmployee_Click" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
